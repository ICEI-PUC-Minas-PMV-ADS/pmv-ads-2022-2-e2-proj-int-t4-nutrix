@model Nutrix_DIETAS_E_ACOMPANHAMENTO_CSHARP.Models.DadoPessoal

@{
    ViewData["Title"] = "Dados pessoais";
}

<html lang="pt-br">
<head>
    <link rel="stylesheet" href="~/css/Perfil.css" asp-append-version="true" />
    <title>Nutrix Dietas e Acompanhamento </title>


</head>
<body>
    <main>
        <div>
            <h1 id="titulo">Dados Pessoais</h1>
        </div>


        <fieldset class="grupo1">

            <h2 id="titulo2">
                <img src="../../assets/edit-document-icon.png">
                <div class="title2">
                    Dados para edição do perfil
                </div>
            </h2>

            <div class="row">

                <form asp-action="CreateDadoPessoal">
                    <div class="text-danger">Preencha os dados pessoais para gerar a dieta</div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Peso" class="control-label"></label>
                        <input asp-for="Peso" class="form-control" />
                        <span asp-validation-for="Peso" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Altura" class="control-label"></label>
                        <input asp-for="Altura" class="form-control" />
                        <span asp-validation-for="Altura" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tipo" class="control-label"></label>
                        <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<FrequenciaAtvFisica>()" placeholder="Frequência Atividade Física"></select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>


                    </div>
                    <button class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </button>
                </form>

            </div>

        </fieldset>
    </main>
</body>



</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


