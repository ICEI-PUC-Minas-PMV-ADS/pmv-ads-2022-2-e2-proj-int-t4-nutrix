@model IEnumerable<Nutrix_DIETAS_E_ACOMPANHAMENTO_CSHARP.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNasc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SexoBiologico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDiabetico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsIntoleranteLactose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAlergicoGluten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAlergicoFrutosMar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNasc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SexoBiologico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDiabetico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsIntoleranteLactose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAlergicoGluten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAlergicoFrutosMar)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
